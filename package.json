{
  "name": "aurora-research-os",
  "private": true,
  "version": "0.1.0",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace @aurora/web",
    "dev:api": "npm run dev --workspace @aurora/api",
    "build": "npm run build --workspaces && npm run fix-exports",
    "fix-exports": "cd packages/core && node fix-exports.js",
    "postinstall": "npm run fix-exports || true",
    "test": "npm run test --workspace @aurora/core",
    "lint": "npm run lint --workspaces || echo \"no linters yet\""
  }
}
